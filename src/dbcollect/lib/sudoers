# sudoers file for dbcollect. Can be safely removed
Cmnd_Alias DBCOLLECT = /usr/sbin/diskinfo, /usr/sbin/ioscan -fnC processor, /usr/sbin/pvdisplay, /usr/sbin/lvdisplay, \
    /usr/sbin/multipath -ll, /sbin/vgs, /sbin/pvs, /sbin/lvs, /usr/sbin/dmidecode, /usr/sbin/lshw, /usr/bin/lshw, /usr/bin/rpm -Va
%dba, %dbcollect, nobody	ALL = (ALL) NOPASSWD: DBCOLLECT
